<configuration>
    <appender name="SERVER" class="ch.qos.logback.core.FileAppender">
        <file>src/main/resources/logs/backend.log</file>
        <encoder>
            <pattern>[%date{ISO8601}] [%level] [%logger] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CLIENT" class="ch.qos.logback.core.FileAppender">
        <file>src/main/resources/logs/client.log</file>
        <encoder>
            <pattern>[%date{ISO8601}] [%level] [%logger] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.chord.Server" level="INFO">
        <appender-ref ref="SERVER" />
    </logger>

    <logger name="com.chord.Parent" level="INFO">
        <appender-ref ref="SERVER" />
    </logger>

    <logger name="com.chord.HttpServer" level="INFO">
        <appender-ref ref="SERVER" />
    </logger>

    <logger name="com.chord.HttpClient" level="INFO">
        <appender-ref ref="CLIENT" />
    </logger>

    <logger name="com.chord.Counter" level="INFO">
        <appender-ref ref="CLIENT" />
    </logger>

    <logger name="com.chord.Aggregator" level="INFO">
        <appender-ref ref="CLIENT" />
    </logger>

    <logger name="com.chord.Simulation" level="INFO">
        <appender-ref ref="CLIENT" />
    </logger>

    <logger name="com.chord.Main" level="INFO">
        <appender-ref ref="CLIENT" />
    </logger>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date{ISO8601}] [%level] [%logger] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>